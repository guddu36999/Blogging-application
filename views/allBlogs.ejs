<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/head')%>
</head>
<body class="p-8">
    <h1 class="m-10 text-9xl text-center font-serif text-blue-900">All Blogs</h1>

    <%if(locals.blogs){%>
        <div class="w-full h-[600px] mx-auto flex flex-wrap justify-center items-start gap-8 m-5">
            <%for(let i=0;i<blogs.length;i++){%>
                 <%const today=blogs[i].createdAt;
                 const newDates=today.toString().substring(4,21);%>
               <div class="w-1/3 h-full flex flex-col justify-between items-center">
                 <div class="w-full h-2/3 flex" >
                     <img src="<%=blogs[i].coverImage%>" alt="" class="max-w-full max-h-full">
                 </div>
                 <div class="w-full h-1/3 flex flex-col text-left p-2 overflow-hidden">
                     <a href="/blog/<%=blogs[i]._id%>" class="w-full mx-auto  m-1 text-sm">Read</a>
                     <h1 class="w-full mx-auto text-sm m-1 text-left"><%=newDates%></h1>
                     <h1 class="w-full mx-auto uppercase text-2xl font-medium"><%=blogs[i].title%></h1>
                     </div>
               </div>
            <%}%>
         </div> 
    <%}%>

</body>
</html>